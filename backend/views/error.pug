doctype html
html
  head
    title Error
    style.
      body {
        padding: 50px;
        font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
      }
      .error-container {
        background: #f8d7da;
        padding: 20px;
        border-radius: 5px;
        border: 1px solid #f5c6cb;
      }
      h1 {
        color: #721c24;
      }
      pre {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 4px;
      }

  body
    div.error-container
      h1= message
      h2= error.status
      if error.stack
        pre #{error.stack}